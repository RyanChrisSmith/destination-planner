<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@url.url) %>

    <p><h4>Forecast for <%= @weather.location %>:</h4></p>
    <p><strong><%= @weather.date.strftime("%A, %B %e") %></strong></p>
    <p>Low Temp: <%= @weather.low_temp %><span>&#176;</span>F</p>
    <p>High Temp: <%= @weather.high_temp %><span>&#176;</span>F</p>
    <p>Summary: <%= @weather.summary %></p>


  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
